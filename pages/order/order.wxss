/* pages/order/order.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #400000;
}

.aside {
  position: absolute;
  left: 0px;
  top: 30%;
  height: 165px;
  width: 20%;
  padding-bottom: 0;
  text-align: center;
  background: #fff;
}

.aside::-webkit-scrollbar {
  width: 0;
}

.aside .menu {
  height: 40px;
  color: #333;
  font-size: 14px;
  line-height: 40px;
  border-top: 1px solid #eee;
}

.aside .menu.active {
  background: #B8B8B8;
}

.item-content {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 80%;
  height: calc(100% - 10px);
  padding-right: 4px;
  padding-top: 2px; 
}

.item-content .box {
  height: calc(100% - 10px);
  padding: 6px 0 0 6px;
  overflow: scroll;
}

.item-content .box.active {
  padding-bottom: 80px;
}

.item-content .box::-webkit-scrollbar {
  width: 0;
}

.item-content .box .item {
  height: 80px;
  padding: 6px 0 6px 6px;
  margin-bottom: 6px;
  background: #fff;
}

.item-content .box .item image {
  display: block;
  float: left;
  height: 80px;
  width: 90px;
  margin-right: 10px;
}

.item-content .box .item text {
  display: block;
  font-size: 16px;
}

.item-content .box .item .title {
  margin-bottom: 5px;
  font-weight: bolder;
}

.item-content .box .item .price {
  color: red;
  font-size: 18px;
  margin-bottom: 5px;
}

.item-content .box .item .btn {
  display: block;
  float: right;
  margin: -10px 10px 0 0;
  padding: 5px 10px;
  font-size: 14px;
  color: #fff;
  background: orange;
  border-radius: 20px;
}

.item-content .box .item .btn.active {
  background: #ccc;
}

.bottom-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80px;
  line-height: 80px;
  background: #fff;
  box-shadow: 0 -5px 10px #ccc;
}

.bottom-bar.hidden {
  display: none;
}

.bottom-bar>view {
  flex-grow: 1;
}

.bottom-bar .count {
  padding-left: 10px;
}

.bottom-bar .num {
  margin-right: 10px;
  font-size: 18px;
  font-weight: bolder;
  color: red;
}

.bottom-bar .btn {
  height: 40px;
  width: 50px;
  margin: 20px 10px 0 0;
  color: #fff;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  background: orange;
}
